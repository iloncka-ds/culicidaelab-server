# Production Environment Configuration Template
# Copy this file to .env.production and update the values for your VPS

# Your domain name or VPS IP address
DOMAIN=yourdomain.com
# Alternative: use IP address if no domain
# DOMAIN=123.456.789.012

# Docker image registry (leave empty for local images)
REGISTRY=

# Version tag for images
VERSION=latest

# Environment
ENVIRONMENT=production
FASTAPI_ENV=production
NGINX_ENV=production

# Debug settings (should be false in production)
DEBUG=false
SOLARA_DEBUG=false

# URLs for production (replace yourdomain.com with your actual domain/IP)
CLIENT_BACKEND_URL=https://${DOMAIN}
STATIC_URL_BASE=https://${DOMAIN}
STATIC_FILES_URL=https://${DOMAIN}

# CORS origins (add your domain)
CORS_ORIGINS=https://${DOMAIN},http://${DOMAIN}

# SSL/TLS (if using HTTPS)
SSL_ENABLED=true
